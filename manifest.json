{
  "manifest_version": 3,
  "name": "Bookmark Updater",
  "version": "1.0",
  "description": "Updates specific bookmark URLs.",
  "permissions": ["storage", "bookmarks"],
  "host_permissions": ["https://your-download-url/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
